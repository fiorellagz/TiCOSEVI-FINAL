<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nashyra.ticosevi.Pregunta06"
    tools:showIn="@layout/activity_pregunta06">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIQUIENTE"
        android:id="@+id/button14"
        android:textColorLink="#0c0c0c"
        android:fontFamily="@android:string/unknownName"
        android:background="#45e718"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/rgPreg6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para evitar colisionar con el vehículo de adelante debemos:"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#2e0ad1"
        android:textStyle="bold"
        android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
        android:textAlignment="center"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:id="@+id/rgPreg6">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="No descuidar los ángulos muertos."
            android:id="@+id/radioButton10" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Guardar la distancia y estar alerta."
            android:id="@+id/radioButton11" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Usar los espejos retrovisores."
            android:id="@+id/radioButton12" />
    </RadioGroup>
</RelativeLayout>
